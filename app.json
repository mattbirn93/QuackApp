{
  "name": "your-app-name",
  "description": "A description of your app",
  "scripts": {
    "postdeploy": "mkdir -p /app/certs && cp certs/key.pem /app/certs/key.pem && cp certs/cert.pem /app/certs/cert.pem"
  },
  "env": {
    "MONGO_URI": {
      "required": true
    },
    "VITE_API_BASE_URL_PROD": {
      "required": true
    },
    "MONGO_COLLECTION_NAME": {
      "required": true
    },
    "VITE_USE_HTTPS": {
      "required": true
    },
    "VITE_SSL_KEY_PATH": {
      "required": true
    },
    "VITE_SSL_CERT_PATH": {
      "required": true
    },
    "PUBLIC_URL": {
      "required": true
    }
  }
}
